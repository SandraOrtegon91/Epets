@page
@model Epets.App.Presentacion.Pages.InicioMedicoModel
@{
    ViewData["Title"] = "E-Pets-Medicos";
}
<style>
    tr:hover {
        background-color: rgb(252, 255, 95);
    }

    #jhan {
        border-radius: 150%;
        height: 50px;
        width: 50px;
        font-size: 1px;

    }

    #BannerVeterinarios {


        background-image: url("../img/Banner_Medicos.png");
    }

    #jhan:hover {
        border-radius: 0%;
        height: 50px;
        width: 100px;
        font-size: 30px;

    }

    #btnConsultar:hover {
        background-color: #BBBBBB;
    }

    #btnRegistrar:hover {
        background-color: #0DC7E5;
    }

    #btnActualizar:hover {
        background-color: #10D691;
    }

    #btnEliminar:hover {
        background-color: #FE5D6E;
    }
    #btnLimpiar:hover {
        background-color: #CEECE2;
    }


    #imagen {
        border-top-left-radius: 70%;
    }

    #Cardimagen:hover #imagen {
        border-top-left-radius: 0px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="text-center">
                <h1 class="display-4">Bienvenido Medico</h1>
                <p>MinTic-2021 <a href="/Grupo_4/InicioGrupo_4">Grupo_4</a>.</p>
            </div>

            <div id="BannerVeterinarios" class="page-banner overlay-dark bg-image">
                <div class="banner-section">
                    <div class="container text-center wow fadeInUp">
                        <nav aria-label="Breadcrumb">
                            <ol class="breadcrumb breadcrumb-dark bg-transparent justify-content-center py-0 mb-2">
                                <li class="breadcrumb-item"><a href="/Index">Inicio</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Veterinarios</li>
                            </ol>
                        </nav>
                        <h1 class="font-weight-normal">Nuestros Veterinarios</h1>
                    </div> <!-- .container -->
                </div> <!-- .banner-section -->
            </div> <!-- .page-banner -->



            <div class="page-section bg-light">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-10">

                            <div class="row">

                                <div class="col-md-6 col-lg-4 py-3 wow zoomIn">
                                    <div class="card-doctor" id="Cardimagen">
                                        <div class="header">
                                            <img src="../img/doctors/doctor_1.jpg" alt="" id="imagen">
                                            <div class="meta">
                                                <a href="#"><span class="mai-call"></span></a>
                                                <a href="#"><span class="mai-logo-whatsapp"></span></a>
                                            </div>
                                        </div>
                                        <div class="body">
                                            <p class="text-xl mb-0">Dr. Estefania Perdomo</p>
                                            <span class="text-sm text-grey">Medica Veterinaria</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 col-lg-4 py-3 wow zoomIn">
                                    <div class="card-doctor" id="Cardimagen">
                                        <div class="header">
                                            <img src="../img/doctors/doctor_2.jpg" alt="" id="imagen">
                                            <div class="meta">
                                                <a href="#"><span class="mai-call"></span></a>
                                                <a href="#"><span class="mai-logo-whatsapp"></span></a>
                                            </div>
                                        </div>
                                        <div class="body">
                                            <p class="text-xl mb-0">Dr. Alex Mejia</p>
                                            <span class="text-sm text-grey">Dentista Canino</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 col-lg-4 py-3 wow zoomIn">
                                    <div class="card-doctor" id="Cardimagen">
                                        <div class="header">
                                            <img src="../img/doctors/doctor_3.jpg" alt="" id="imagen">
                                            <div class="meta">
                                                <a href="#"><span class="mai-call"></span></a>
                                                <a href="#"><span class="mai-logo-whatsapp"></span></a>
                                            </div>
                                        </div>
                                        <div class="body">
                                            <p class="text-xl mb-0">Dr. Rebecca Rodriguez</p>
                                            <span class="text-sm text-grey">Zootecnista</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5 col-sm-12">
            <div class="page-section">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12" style="text-align: center;">
                            <label>
                                <h1 class="text-center wow fadeInUp">CRUD Medido</h1>
                            </label>
                        </div>
                    </div>
                    <form class="main-form">
                        <div class="row">
                            
                            <div class="col-md-6 ">
                                <label>Cedula: </label>
                                <input id=Cedula type="text" class="form-control" placeholder="Digite Cedula"
                                    style="margin-bottom: 20px;">
                            </div>
                            <div class="col-md-6 ">
                                <label>Nombres: </label>
                                <input id=Nombres type="text" class="form-control" placeholder="Digite Nombres"
                                    style="margin-bottom: 20px;">
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 20px;">

                            <div class="col-md-6 ">
                                <label>Apellidos: </label>
                                <input id=Apellidos type="text" class="form-control" placeholder="Digite Apellidos"
                                    style="margin-bottom: 20px;">
                            </div>

                            <div class="col-md-6 ">
                                <label>Tarjeta Profesional: </label>
                                <input id=TarjetaProfesional type="text" class="form-control" placeholder="Digite Tarjeta Profesional" 
                                style="margin-bottom: 20px;">
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 20px;">
                            <div class="col-md-6 ">
                                <label>Telefono: </label>
                                <input id=Telefono type="text" class="form-control" placeholder="Digite Telefono"
                                style="margin-bottom: 20px;">
                            </div>
                            <div class="col-md-6 ">
                                <label>Especialidad: </label>
                                <select name="Tipo Animal" id="Especialidad" class="custom-select"
                                    style="margin-bottom: 20px;">
                                    <option value="Elija opcion">--Elija Especialidad--</option>
                                    <option value="Opcion Perro">Perro</option>
                                    <option value="Opcion Gato">Gato</option>
                                    <option value="Opcion Pajaro">Pajaro</option>
                                    <option value="Opcion todos">Perro, Gato, Pajaro</option>

                                </select>


                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 20px;">
                            
                            <div class="col-md-6 ">
                                <label>Especialidad: </label>
                                <select name="Hospital" id="Hospital" class="custom-select"
                                    style="margin-bottom: 20px;">
                                    <option value="Elija opcion">--Elija Hospital--</option>
                                    <option value="Opcion Perro">Mascota feliz</option>
                                    <option value="Opcion Gato">ClinVet</option>
                                    <option value="Opcion Pajaro">El establo</option>
                                    <option value="Opcion todos">La Herradura</option>

                                </select>


                            </div>
                        </div>


                        <div class="row">
                             <a class="btn btn-info mt-3 wow zoomIn" id="btnAtras"
                             style="margin-bottom: 20px; margin-left: 10px;" href="/Medicos/InicioMedico" role="button">Nuevo Registro</a>
                            
                            <button id="btnConsultar" type="submit" class="btn btn-secondary mt-3 wow zoomIn"
                                style="margin-bottom: 20px; margin-left: 10px;">Consultar</button>
                            <button id="btnRegistrar" type="submit" class="btn btn-primary mt-3 wow zoomIn"
                                style="margin-bottom: 20px; margin-left: 10px;" asp-page="/Medicos/InicioMedico">Registrar</button>
                            <button id="btnActualizar" type="submit" class="btn btn-success mt-3 wow zoomIn"
                                style="margin-bottom: 20px; margin-left: 10px;">Actualizar</button>
                            <button id="btnEliminar" type="submit" class="btn btn-danger mt-3 wow zoomIn"
                                style="margin-bottom: 20px; margin-left: 10px;">Eliminar</button>

                            <button id="btnLimpiar" type="submit" class="btn btn-info mt-3 wow zoomIn"
                              style="margin-bottom: 20px; margin-left: 10px;" onclick="Limpiar();">Limpiar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-7 col-sm-12">
            <caption>
                <label for="   "></label>
                <h4>Listado Medicos</h4>
            </caption>
            <table class="table">
               
                    <thead>
                        <tr class="bg-warning" id="tablaj">
                            <th scope="col">Codigo</th>
                            <th scope="col">Cedula</th>
                            <th scope="col">Nombres </th>
                            <th scope="col">Apellidos</th>
                            <th scope="col">Telefono</th>
                            <th scope="col">N. Tarjeta Profesiona</th>
                            <!-- <th scope="col">Especialidad</th>   -->
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Medicos)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.Cedula
                            </td>
                            <td>
                                @item.Nombre
                            </td>
                            <td>
                                @item.Apellido
                            </td>
                            <td>
                                @item.Telefono
                            </td>
                            <td>
                                @item.TarjetaProfesional
                            </td>                           
                                 <td>
                                
                                

                                <a asp-page="/Medicos/BuscarMedico" asp-route-Id="@item.Id"><img src="~/img/iconos/Buscar.png"  alt="" style="width: 30px;"  title="¿Buscar?" ></a>
                                
                                </td>
                                <td>
                               
                                <a asp-page="/Medicos/AgregarMedico" asp-route-Id="@item.Id"><img src="~/img/iconos/Guardar.png" alt="" style="width: 30px;" title="¿Nuevo Medico?" onclick="MensajeGuardar();"></a>
                                </td>
                                <td>
                                <a asp-page="/Medicos/EditarMedico" asp-route-Id="@item.Id"><img src="~/img/iconos/Editar.png" alt="" style="width: 30px;" title="¿Editar?" ></a>
                             
                                </td>                               
                                <td>
                                <a asp-page="/Medicos/BuscarMedico" asp-route-Id="@item.Id"><img src="~/img/iconos/Eliminar.png" alt="" style="width: 30px;"title="¿Eliminar?" onclick="MensajeEliminar();"></a>
                             
                                </td>
                          
                             
                        </tr>
                        }
                    </tbody>

                

            </table>

        </div> <!-- .container -->
    </div> <!-- .page-section -->

</div> <!-- .page-section -->

<script>

    function MensajeEliminar{
        confirm ("¿Esta seguro de Eliminar el Registro?");
    }
     function MensajeActualizar{
        confirm ("¿Esta seguro de Actualizar el Registro?");
    }
    function MensajeGuardar{
        confirm ("¿Esta seguro de Guardar el Registro?");
    }
    function MensajeBuscar{
        confirm ("¿Esta seguro de Buscar el Registro?");
    }

    function Limpiar(){
        $("#Cedula").val('');
        $("#Nombres").val('');
        $("#Apellidos").val('');
        $("#TarjetaProfesional").val('');
        $("#Telefono").val('');


    }

    function CargarActualizar(Id){
        
        $("#Cedula").val(Id);
        $("#Nombres").val(Id);
        $("#Apellidos").val(Id);
        $("#TarjetaProfesional").val(Id);
        $("#Telefono").val(Id);

    }

</script>
