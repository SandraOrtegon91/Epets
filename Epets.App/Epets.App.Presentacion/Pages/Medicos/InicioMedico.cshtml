@page
@model Epets.App.Presentacion.Pages.InicioMedicoModel
@{
    ViewData["Title"] = "E-Pets-Medicos";
}
<style>
    tr:hover {
        background-color: rgb(252, 255, 95);
    }

    #jhan {
        border-radius: 150%;
        height: 50px;
        width: 50px;
        font-size: 1px;

    }

    #BannerVeterinarios {


        background-image: url("../img/Banner_Medicos.png");
    }

    #jhan:hover {
        border-radius: 0%;
        height: 50px;
        width: 100px;
        font-size: 30px;

    }

    #btnConsultar:hover {
        background-color: #BBBBBB;
    }

    #btnRegistrar:hover {
        background-color: #0DC7E5;
    }

    #btnActualizar:hover {
        background-color: #10D691;
    }

    #btnEliminar:hover {
        background-color: #FE5D6E;
    }
    #btnLimpiar:hover {
        background-color: #CEECE2;
    }


    #imagen {
        border-top-left-radius: 70%;
    }

    #Cardimagen:hover #imagen {
        border-top-left-radius: 0px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="text-center">
                <h1 class="display-4">Bienvenido Medico</h1>
                <p>MinTic-2021 <a href="/Grupo_4/InicioGrupo_4">Grupo_4</a>.</p>
            </div>

            <div id="BannerVeterinarios" class="page-banner overlay-dark bg-image">
                <div class="banner-section">
                    <div class="container text-center wow fadeInUp">
                        <nav aria-label="Breadcrumb">
                            <ol class="breadcrumb breadcrumb-dark bg-transparent justify-content-center py-0 mb-2">
                                <li class="breadcrumb-item"><a href="/Index">Inicio</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Veterinarios</li>
                            </ol>
                        </nav>
                        <h1 class="font-weight-normal">Nuestros Veterinarios</h1>
                    </div> <!-- .container -->
                </div> <!-- .banner-section -->
            </div> <!-- .page-banner -->



            <div class="page-section bg-light">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-10">

                            <div class="row">

                                <div class="col-md-6 col-lg-4 py-3 wow zoomIn">
                                    <div class="card-doctor" id="Cardimagen">
                                        <div class="header">
                                            <img src="../img/doctors/doctor_1.jpg" alt="" id="imagen">
                                            <div class="meta">
                                                <a href="#"><span class="mai-call"></span></a>
                                                <a href="#"><span class="mai-logo-whatsapp"></span></a>
                                            </div>
                                        </div>
                                        <div class="body">
                                            <p class="text-xl mb-0">Dr. Estefania Perdomo</p>
                                            <span class="text-sm text-grey">Medica Veterinaria</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 col-lg-4 py-3 wow zoomIn">
                                    <div class="card-doctor" id="Cardimagen">
                                        <div class="header">
                                            <img src="../img/doctors/doctor_2.jpg" alt="" id="imagen">
                                            <div class="meta">
                                                <a href="#"><span class="mai-call"></span></a>
                                                <a href="#"><span class="mai-logo-whatsapp"></span></a>
                                            </div>
                                        </div>
                                        <div class="body">
                                            <p class="text-xl mb-0">Dr. Alex Mejia</p>
                                            <span class="text-sm text-grey">Dentista Canino</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 col-lg-4 py-3 wow zoomIn">
                                    <div class="card-doctor" id="Cardimagen">
                                        <div class="header">
                                            <img src="../img/doctors/doctor_3.jpg" alt="" id="imagen">
                                            <div class="meta">
                                                <a href="#"><span class="mai-call"></span></a>
                                                <a href="#"><span class="mai-logo-whatsapp"></span></a>
                                            </div>
                                        </div>
                                        <div class="body">
                                            <p class="text-xl mb-0">Dr. Rebecca Rodriguez</p>
                                            <span class="text-sm text-grey">Zootecnista</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        
        <div class="col-md-12 col-sm-12">
            <caption>
                <label for="   "></label>
                <h2>Listado Medicos</h2>
            </caption>
            <table class="table">
               
                    <thead>
                        <tr class="bg-warning" id="tablaj">
                            <th scope="col">Codigo</th>
                            <th scope="col">Cedula</th>
                            <th scope="col">Nombres </th>
                            <th scope="col">Apellidos</th>
                            <th scope="col">Telefono</th>
                            <th scope="col">N. Tarjeta Profesiona</th>
                            <th scope="col">Especialidad</th>
                            <th scope="col">Hospital</th>
                            <th scope="col">     </th>
                            <th scope="col">¿QUE </th>
                            <th scope="col"> DESEAS</th>
                            <th scope="col"> HACER </th>
                             <th scope="col"> ?.. </th>
                            <!-- <th scope="col">Especialidad</th>   -->
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Medicos)
                    {
                        <tr>
                            <td>
                                @item.Id
                            </td>
                            <td>
                                @item.Cedula
                            </td>
                            <td>
                                @item.Nombre
                            </td>
                            <td>
                                @item.Apellido
                            </td>
                            <td>
                                @item.Telefono
                            </td>
                            <td>
                                @item.TarjetaProfesional
                            </td>      
                            <td>
                                @item.TipoAnimal
                            </td>    
                            <td>
                                @item.Empresa
                            </td>   
                            <td>
                                
                            </td>                 
                                 <td>
                                
                                

                                <a asp-page="/Medicos/BuscarMedico" asp-route-Id="@item.Id"><img src="~/img/iconos/Buscar.png"  alt="" style="width: 30px;"  title="¿Buscar?" ></a>
                                
                                </td>
                                <td>
                               
                                <a asp-page="/Medicos/AgregarMedico" ><img src="~/img/iconos/Guardar.png" alt="" style="width: 30px;" title="¿Nuevo Medico?" onclick="MensajeGuardar();"></a>
                                </td>
                                <td>
                                <a asp-page="/Medicos/EditarMedico" asp-route-Id="@item.Id"><img src="~/img/iconos/Editar.png" alt="" style="width: 30px;" title="¿Editar?" ></a>
                             
                                </td>                               
                                <td>
                                <a asp-page="/Medicos/BuscarMedico" asp-route-Id="@item.Id"><img src="~/img/iconos/Eliminar.png" alt="" style="width: 30px;"title="¿Eliminar?" onclick="MensajeEliminar();"></a>
                             
                                </td>
                          
                             
                        </tr>
                        }
                    </tbody>

                

            </table>

        </div> <!-- .container -->
    </div> <!-- .page-section -->

</div> <!-- .page-section -->

<script>

    function MensajeEliminar{
        confirm ("¿Esta seguro de Eliminar el Registro?");
    }
     function MensajeActualizar{
        confirm ("¿Esta seguro de Actualizar el Registro?");
    }
    function MensajeGuardar{
        confirm ("¿Esta seguro de Guardar el Registro?");
    }
    function MensajeBuscar{
        confirm ("¿Esta seguro de Buscar el Registro?");
    }

    function Limpiar(){
        $("#Cedula").val('');
        $("#Nombres").val('');
        $("#Apellidos").val('');
        $("#TarjetaProfesional").val('');
        $("#Telefono").val('');


    }

    function CargarActualizar(Id){
        
        $("#Cedula").val(Id);
        $("#Nombres").val(Id);
        $("#Apellidos").val(Id);
        $("#TarjetaProfesional").val(Id);
        $("#Telefono").val(Id);

    }

</script>
